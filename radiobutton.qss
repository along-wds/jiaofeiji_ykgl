QLineEdit{  
    text-align: center;  
    color:black;
    background-color: transparent;  
    border: 0px; 
    font-size: 21px;
    selection-color:yellow;  
    selection-background-color:green;  
}	
QRadioButton {
  spacing: 5px;
  font-size: 14px;
  color: rgb(24, 220, 88);  
}

QRadioButton::indicator {  
  width: 20px;
  height: 20px;
}

QComboBox {
	font-family: \"Microsoft YaHei UI\"; 
        font-size: 22px;
	outline: 0px;
 	padding: 3px 0x 3px 5px;
	border: 0px; 
        background-color: transparent;
}
 QComboBox::drop-down 
{	subcontrol-origin: padding; 
	subcontrol-position: top right; 
        width: 30 px;
	border: 0px;

} 
QComboBox:on{  
    color:red;  
}  
QComboBox:off{  
    color:black;  
}  
QComboBox QAbstractItemView{
    border: 1px solid black; 
    color:black;  
    selection-color: white;  
    selection-background-color: rgb(74, 144, 226);
    outline: 0px;
    height: 500px;
}
QRadioButton::indicator::unchecked {
     
   image: url(:/image/picture/qietu/check.png);
}
QRadioButton::indicator::checked { 

        image: url(:/image/picture/qietu/checked.png);
}

